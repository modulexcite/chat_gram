<html>
<head>
	<title>Hubot+Instagram</title>
</head>
<script type="text/javascript"
src="//code.jquery.com/jquery-1.6.min.js"></script>
<script type="text/javascript">
$(document).ready(function() {
  $("#add-toggle").click(function() {
    $('#user-form').toggle()
  })
  $("#users .remove-link").click(function() {
    var self = $(this)
      , li = self.parent()
      , user = self.data('username')
      , url = "/users/" + user
    $.ajax(url,
      { type: "DELETE"
      , complete: function(xhr, status) {
          if(status == 'success')
            li.hide()
          else
            alert(status)
        }
      })
  })
})
</script>

<style type="text/css">
  body {
    margin: 50px 0;
    font-family: Helvetica, Arial, sans-serif;
    font-size: 12px;
  }

  #wrapper {
    margin: 0 auto;
    width: 300px;
  }

  #wrapper a { float: right; }

  #users {
    list-style: none;
    padding: 0;
  }

  #users li {
    padding: 5px 3px;
    border-bottom: 1px solid #ddd;;
  }

  .authorized { background: #efe; }
  .unauthorized { background: #fee; }

  h3 {
    margin: 0 0 20px 0;
  }

  h3 a {
    font-weight: normal;
  }

  #user-form input {
    border: solid 1px #555;
    font-size: 175%;
    width: 300px;
  }
</style>
<body>
<div id="wrapper">
{{{yield}}}
</div>
</body>
</html>


